Vagrant.configure("2") do |config|


######## JENKINS SERVER CONFIG #########################################
  config.vm.box = "/home/student/centos-7.4-x86_64-minimal.box"
  config.vm.define "jen" do |jen|
	jen.vm.provider "virtualbox" do |vb|
	vb.memory = "2048"
	vb.name="Jenkins Server"
	end
        jen.vm.hostname = "jenkins"
	jen.vm.provision "shell", path: "provision.sh"
   end

########################################################################


  # Disable automatic box update checking. If you disable this, then
  # boxes will only be checked for updates when the user runs
